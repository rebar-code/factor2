{{ 'factor2-custom.css' | asset_url | stylesheet_tag }}

<div class="factor2-categories color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="factor2-categories__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="factor2-categories__grid factor2-categories__grid--{{ section.settings.columns_desktop }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="factor2-category-tile" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="factor2-category-tile__image">
              {{ block.settings.image | image_url: width: 400 | image_tag: alt: block.settings.title }}
            </div>
          {% endif %}
          <h3 class="factor2-category-tile__title">{{ block.settings.title }}</h3>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .factor2-categories {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
</style>

{% schema %}
{
  "name": "Factor2 Categories",
  "class": "factor2-categories-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SHOP BY CATEGORY"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 4
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Factor2 Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "ADHESIVE PRODUCTS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "CARTRIDGE SYSTEMS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "MOLD MAKING"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "SPECIALTY PRODUCTS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "MAGNETIC COMPONENTS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "LEARNING RESOURCES"
          }
        }
      ]
    }
  ]
}
{% endschema %}
