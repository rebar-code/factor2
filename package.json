{
  "name": "factor2",
  "version": "1.0.0",
  "description": "Shopify development with MCP server",
  "scripts": {
    "mcps": "npx -y @shopify/dev-mcp@latest",
    "dev": "shopify theme dev -s 'factor2inc.myshopify.com' --live-reload=hot-reload --open",
    "dev:full": "shopify theme dev -s 'factor2inc.myshopify.com' --live-reload=full-page --open",
    "dev:no-reload": "shopify theme dev -s 'factor2inc.myshopify.com' --live-reload=off --open",
    "pull": "shopify theme pull -s 'factor2inc.myshopify.com'",
    "share": "shopify theme share",
    "check": "shopify theme check -s 'factor2inc.myshopify.com'",
    "login": "shopify theme dev -s 'factor2inc.myshopify.com' --help && echo 'Run npm run dev to start - authentication will happen automatically'",
    "status": "shopify theme list -s 'factor2inc.myshopify.com'",
    "convert:categories": "tsx migration/convert-categories.ts",
    "convert:products": "tsx migration/convert-products.ts",
    "convert:product-collections": "tsx migration/convert-product-collections.ts",
    "convert:redirects": "tsx migration/convert-redirects.ts",
    "convert:product-options": "tsx migration/convert-product-options.ts",
    "convert:all": "npm run convert:categories && npm run convert:product-collections && npm run convert:products && npm run convert:redirects",
    "extract:files": "tsx migration/extract-files.ts",
    "extract:product-links": "tsx migration/extract-product-links.ts",
    "extract:all": "npm run extract:files && npm run extract:product-links",
    "upload:files": "tsx migration/upload-files.ts",
    "upload:files:dry-run": "DRY_RUN=true tsx migration/upload-files.ts",
    "upload:skip": "tsx migration/skip-file-upload.ts",
    "upload:retry": "tsx migration/retry-failed-uploads.ts",
    "upload:update-urls": "tsx migration/update-file-urls.ts",
    "enrich:file-errors": "tsx migration/enrich-file-errors.ts",
    "migrate:get-token": "tsx migration/get-token.ts",
    "migrate:categories": "tsx migration/categories.ts",
    "migrate:categories:dry-run": "DRY_RUN=true tsx migration/categories.ts",
    "migrate:products": "tsx migration/products.ts",
    "migrate:products:dry-run": "DRY_RUN=true tsx migration/products.ts",
    "migrate:products:update-existing": "tsx migration/update-existing-products.ts",
    "migrate:products:update-existing:dry-run": "DRY_RUN=true tsx migration/update-existing-products.ts",
    "migrate:update-links": "tsx migration/update-product-links.ts",
    "migrate:update-links:dry-run": "DRY_RUN=true tsx migration/update-product-links.ts",
    "migrate:metafield-definitions": "tsx migration/create-metafield-definitions.ts"
  },
  "keywords": ["shopify", "mcp"],
  "license": "MIT",
  "dependencies": {
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "image-size": "^1.1.1"
  }
}
